        "eslint-plugin-import": "^2.22.1",
        "git-cz": "^4.7.6",
        "husky": "4.3.8",
        "jest": "^27.0.6",
        "nodemon": "^2.0.7",
        "semantic-release": "^17.4.2",
        "semantic-release-github-pr": "^6.0.1",
        "source-map-support": "^0.5.19",
        "sucrase": "^3.18.1",
        "ttypescript": "^1.5.12",
        "typescript": "4.2.4"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
