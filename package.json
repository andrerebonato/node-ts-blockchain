{
    "name": "node-ts-blockchain",
    "version": "1.0",
    "private": false,
    "description": "A block chain example in node + typescript!",
    "main": "src/index.ts",
    "author": "Andr√© Rebonato <andrev.rebonato@gmail.com>",
    "license": "MIT",
    "scripts": {
        "start": "node build/index.js",
        "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --no-notify src/index.ts",
        "build": "cross-env NODE_ENV=production ttsc --P ./tsconfig.json",
        "test:watch": "cross-env NODE_ENV=test jest src/ --passWithNoTests",
        "lint": "eslint --ext js,ts src",
        "lint:fix": "eslint --ext js,ts src --fix",
        "commit": "git-cz",
        "test": "cross-env NODE_ENV=test npm run test"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/andrerebonato/node-ts-blockchain"
    },
    "dependencies": {
        "axios": "^0.21.1",
        "cors": "^2.8.5",
        "crypto-js": "^4.1.1",
        "elliptic": "^6.5.4",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "express-openapi-validator": "^3.16.1",
        "helmet": "^4.5.0",
        "morgan": "^1.10.0",
        "node-persist": "^3.1.0",
        "ramda": "^0.27.1",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.0-next.12",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.1.0",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.10.1",
